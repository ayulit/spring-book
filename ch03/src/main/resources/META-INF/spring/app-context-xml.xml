<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
			
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean-implementation of MethodReplacer IF -->
	<bean id="methodReplacer"
	 		class="com.apress.prospring.ch3.FormatMessageReplacer"/>

	<!-- 3d party class -->
	<bean id="replacementTarget"
		class="com.apress.prospring.ch3.ReplacementTarget">
			<replaced-method name="formatMessage" replacer="methodReplacer">
                <!-- this descriptor needs for concrete signature point,
				if there are a plenty overloaded methods in 3d party class -->
				<arg-type>String</arg-type>
			</replaced-method>	
	</bean>
	
	<!-- for using standart method of 3d party class (w/o substitution) -->
	<bean id="standartTarget"
		class="com.apress.prospring.ch3.ReplacementTarget"/>

		 			
</beans>



